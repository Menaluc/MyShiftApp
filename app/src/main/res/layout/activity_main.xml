<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content: NavHost -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        tools:layout="@layout/fragment_login" />

    <!-- Right drawer menu -->
    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- ========================= -->
        <!-- EMPLOYEE MENU ITEMS -->
        <!-- ========================= -->

        <TextView
            android:id="@+id/menuSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shift Schedule"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Attendance"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuMonthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Details"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuPayslips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payslips"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"/>

        <!-- Divider -->
        <View
            android:id="@+id/dividerEmployeeManager"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="10dp"/>

        <!-- ========================= -->
        <!-- MANAGER MENU ITEMS (from old menu_manager_drawer) -->
        <!-- ========================= -->

        <TextView
            android:id="@+id/menuManagerSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuManagerEmployees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employees and Constraints"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuManagerBuildSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build Schedule (AI)"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuManagerAttendanceApprovals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance Approvals"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/menuManagerPayslips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payslips"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"/>

        <!-- Logout (shared) -->
        <TextView
            android:id="@+id/menuLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>