<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shift Schedule"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConfigSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Loading settings..."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSubmitStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOpenAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Submit Availability"
            android:enabled="false" />
        <Button
            android:id="@+id/btnViewSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Full Schedule"
            android:layout_marginTop="12dp" />
        <Button
            android:id="@+id/btnViewFullSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Full Schedule"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Back" />

    </LinearLayout>
</ScrollView>
